@model EHR_MVC.Models.Users.UserViewModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Users/AjaxFunction.js"></script>
    <script>
        document.getElementById("FamilyName").value = "Uncle"
        document.getElementById("GivenName").value = "Roger"
        document.getElementById("UserEmail").value = "UncleRoger@noreply.gmail.com"
        document.getElementById("Password").value = "123456"
        document.getElementById("ConfirmPassword").value = "123456"
    </script>
}

@{
    ViewData["Title"] = "Register";
}

<h1>Registration</h1>

<form id="registrationForm">
    <div class="form-group">
        <label asp-for="FamilyName"></label>
        <input asp-for="FamilyName" id="FamilyName" class="form-control" />
        <span asp-validation-for="FamilyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GivenName"></label>
        <input asp-for="GivenName" id="GivenName" class="form-control" />
        <span asp-validation-for="GivenName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserEmail"></label>
        <input asp-for="UserEmail" id="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" id="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="button" class="btn btn-primary" onclick="register()">Register</button>
</form>