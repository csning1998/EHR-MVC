@model EHR_MVC.Models.Users.UserViewModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Users/AjaxFunction.js"></script>
    <script src="~/js/Users/Authentication.js"></script>
    <script>
        document.getElementById("UserEmail").value = "UncleRoger@noreply.gmail.com"
        document.getElementById("Password").value = "123456"
    </script>
}

<div class="text-center">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <!-- Login Card -->
            <div class="col-md-5">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <!-- Page Title -->
                        <h4 class="card-title text-center mb-4">Login</h4>

                        <!-- Error Message -->
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Error:</strong> @ViewBag.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <!-- Login Form -->
                        <form id="loginForm" class="mt-3">
                            <div class="mb-3 text-start">
                                <label for="UserEmail" class="form-label">Email:</label>
                                <input type="email" id="UserEmail" class="form-control" placeholder="Enter your email" />
                            </div>

                            <div class="mb-3 text-start">
                                <label for="Password" class="form-label">Password:</label>
                                <input type="password" id="Password" class="form-control" placeholder="Enter your password" />
                            </div>

                            <!-- Login Button -->
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-primary btn-lg" onclick="login()">Login</button>
                            </div>
                        </form>

                        <!-- Register Link -->
                        <div class="text-center mt-3">
                            <small>
                                Don't have an account? <a href="@Url.Action("Register", "User")">Register</a>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-4 text-muted">
            <small>@DateTime.Now.ToString("yyyy-MM-dd - dddd HH:mm:ss")</small>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .alert {
        font-size: 14px;
        margin-top: 10px;
        padding: 10px 15px;
    }

    #loginForm .form-control {
        height: calc(2.25rem + 2px);
        font-size: 16px;
        padding: 10px;
    }

    #loginForm .form-control {
        height: calc(2.25rem + 2px);
        font-size: 16px;
        padding: 10px;
    }

    .alert {
        font-size: 14px;
        margin-top: 10px;
        padding: 10px 15px;
    }

    .btn-primary {
        border: none;
    }

    .text-muted {
        font-size: 12px;
        color: #6c757d;
    }

</style>
